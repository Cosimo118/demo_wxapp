
.book-info{
  background-color: #fff;
  flex: 0 0 66%;
  box-sizing: border-box;
  height: 242rpx;
  margin-left: 20rpx;
}

.book-info-style{
  height: 244rpx;
  background-color: white;
}

.book-info-style view{
  display: block;
  font-size: 30rpx;
  margin-bottom: 8rpx;
  width: 460rpx;
  text-overflow:ellipsis; 
  overflow:hidden; 
  white-space:nowrap; 
  margin-top: 8rpx;
}
.line{
  width: 100%;
  border: 1px solid #eee;
}